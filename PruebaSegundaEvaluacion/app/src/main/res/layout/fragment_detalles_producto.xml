<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentDetallesProducto">

    <ImageView
        android:id="@+id/imageViewFondoVerde"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:src="@drawable/fondo_vender_redondeado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detalles_del_producto"
        android:textColor="@color/white"
        android:textSize="29sp"
        app:layout_constraintBottom_toBottomOf="@id/imageViewFondoVerde"
        app:layout_constraintEnd_toEndOf="@id/imageViewFondoVerde"
        app:layout_constraintStart_toStartOf="@id/imageViewFondoVerde"
        app:layout_constraintTop_toTopOf="@id/imageViewFondoVerde" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewProductoFragDetalles"
        android:layout_width="172dp"
        android:layout_height="169dp"
        android:scaleX="0.75"
        android:scaleY="0.75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFondoVerde"
        tools:src="@drawable/producto_prueba2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewProductoFragDetalles">

        <TableRow>

            <TextView
                android:id="@+id/textViewProducto"
                android:background="@color/green"
                android:padding="5dp"
                android:text="@string/producto"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNombreProductoFragDetalles"
                android:layout_weight="1"
                android:background="@color/light_green"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="Botella de agua" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewCantidad"
                android:background="@color/light_green"
                android:padding="5dp"
                android:text="@string/cantidad_de_stock"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCantidadProductoFragDetalles"
                android:layout_weight="1"
                android:background="@color/green"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="5" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewPrecio"
                android:background="@color/green"
                android:padding="5dp"
                android:text="@string/precio_litro_kilo"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPrecioProductoFragDetalles"
                android:layout_weight="1"
                android:background="@color/light_green"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="5.99â‚¬" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>