<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividad5Activity">

    <EditText
        android:id="@+id/editTextUsuarioAct5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/EjemploTexto"
        android:inputType="textPersonName"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDisminuirTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SignoMenos"
        android:textSize="40sp"
        android:background="@color/green"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioAct5" />

    <Button
        android:id="@+id/buttonAumentoTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SignoMas"
        android:textSize="40sp"
        android:background="@color/green"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioAct5" />
</androidx.constraintlayout.widget.ConstraintLayout>