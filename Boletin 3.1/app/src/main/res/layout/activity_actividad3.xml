<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividad3Activity">

    <EditText
        android:id="@+id/editTextAlign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/EjemploTexto"
        android:inputType="textPersonName"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTextAlingLeft"
        android:layout_width="121dp"
        android:layout_height="94dp"
        android:background="@color/black"
        android:text="@string/Alinear_Izquierda"
        android:textColor="@color/white"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAlign" />

    <Button
        android:id="@+id/buttonTextAlingRight"
        android:layout_width="115dp"
        android:layout_height="97dp"
        android:background="@color/black"
        android:text="@string/Alinear_Derecha"
        android:textColor="@color/white"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAlign" />


</androidx.constraintlayout.widget.ConstraintLayout>